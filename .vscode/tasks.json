{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": false,
    "args": ["/c"],
    "tasks": [
        {
		// build task - Ctrl-B
		"taskName": "python",
		"isBuildCommand": true,
		"args": ["${file}"]
        },
        {
		// test task - Ctrl-T
		"taskName": "unittest",
		"isTestCommand": true,
		"args": ["-v"]
        }
    ]
}
